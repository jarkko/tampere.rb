<h1>Kokoontumispaikat</h1>

<table>
  <tr>
    <th>Sijainti</th>
    <th>Osoite</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.title, location %></td>
    <td><%=h location.address %></td>
    <td><%= link_to 'Muokkaa', edit_location_path(location) %></td>
    <td><%= link_to 'Poista', location, :confirm => 'Oletko varma?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Lisää uusi sijainti', new_location_path %>
