<h2>Muokkaa tapahtumaa</h2>

<%= error_messages_for :event %>

<% form_for(@event) do |f| %>
  <p>
    <b>Ohjelma</b><br />
    <%= f.text_area :description, :rows => 8, :cols => 80 %>
  </p>

  <p>
    <b>Päivämäärä</b><br />
    <%= f.date_select :date %>
  </p>

  <p>
    <b>Sijainti</b><br />
    <%= f.select 'location_id', Location.find(:all).map { |loc| [loc.title, loc.id] } %>
  </p>

  <p>
    <%= f.submit "Päivitä" %>
  </p>
<% end %>

<%= link_to 'Näytä', @event %> |
<%= link_to 'Takaisin tapahtumiin', events_path %>
