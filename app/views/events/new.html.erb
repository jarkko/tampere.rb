<h2>Lisää uusi tapahtuma</h2>

<%= error_messages_for :event %>
<% @event.location = nil %>

<% form_for(@event) do |f| %>
    <%= f.label :date, 'Päivämäärä:', :class => 'aligned' %>
    <%= f.calendar_date_select :date, :time => false, :class => 'aligned' %><br/>

    <%= f.label :location_id, 'Sijainti:', :class => 'aligned' %>
    <%= f.select 'location_id', Location.find(:all).map { |loc| [loc.title, loc.id] } %> tai lisää uusi: <%= f.text_field :location %><br/>

    <%= label :description, 'Ohjelma:' %><br/>
    <%= f.text_area :description, :cols => 68, :rows => 20 %>

  <p class="clearing">
    <%= f.submit "Tallenna" %>
  </p>
<% end %>

<%= back_to events_path, 'Takaisin tapahtumiin' %>
