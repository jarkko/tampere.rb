<h2>Jäsenet</h2>

<table class="compact">
  <tr>
    <th>Käyttäjä</th>
    <th>Rekisteröitynyt</th>
    <th>Rooli</th>    
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= button_to "Poista",
       { :action => "destroy", :id => user.id }, 
         :confirm => "haluatko varmasti poistaa käyttäjän #{user.login}?",
	 :method => :delete if current_user.admin? || user.id == current_user.id %>
      
      <%= user.login %>
    </td>    
    <td><%= fmt_date(user.created_at) %></td>    
    <td><%= fin_role(user.role) %></td>
  </tr>
  <% end %>
</table>
