<div id="new_user">
  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path do |f| %>
    <br/>
    <label for="login">Käyttäjätunnus:</label>
    <%= f.text_field :login, :size => 40 %><br/>

    <label for="email">Sähköposti:</label>
    <%= f.text_field :email, :size => 40 %><br/>

    <label for="password">Salasana:</label>
    <%= f.password_field :password, :size => 30 %><br/>

    <label for="password_confirmation">Vahvista salasana:</label>
    <%= f.password_field :password_confirmation, :size => 30 %>

    <p><%= submit_tag 'Rekisteröidy' %></p>
  <% end -%>
</div>
