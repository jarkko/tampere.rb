<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login">Käyttäjätunnus</label><br/>
<%= f.text_field :login %></p>

<p><label for="email">Sähköposti</label><br/>
<%= f.text_field :email %></p>

<p><label for="password">Salasana</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Vahvista salasana</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Rekisteröidy' %></p>
<% end -%>
