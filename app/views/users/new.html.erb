<div id="new_user">
  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path do |f| %>
    <br/>
    <label for="user_login">Käyttäjätunnus:</label>
    <%= f.text_field :login, :size => 40 %><br/>

    <label for="user_email">Sähköposti:</label>
    <%= f.text_field :email, :size => 40 %><br/>

    <label for="user_web_page">WWW:</label>
    <%= f.text_field :web_page, :size => 40 %><br/>

    <label for="user_password">Salasana:</label>
    <%= f.password_field :password, :size => 30 %><br/>

    <label for="user_password_confirmation">Vahvista salasana:</label>
    <%= f.password_field :password_confirmation, :size => 30 %>

    <p class="clearing">
      <%= submit_tag 'Rekisteröidy' %>
    </p>
  <% end -%>
</div>
